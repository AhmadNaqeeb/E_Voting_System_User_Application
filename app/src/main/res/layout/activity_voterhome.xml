<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VoterHomeActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="170dp">
    </androidx.viewpager.widget.ViewPager>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Election Commission of Pakistan (ECP)"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivVoteNow"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_design"
            app:layout_constraintEnd_toStartOf="@+id/viewCandidates"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/vote_fingerprint" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vote Now"
            android:textColor="@color/colorPrimaryWave"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ivVoteNow"
            app:layout_constraintStart_toStartOf="@+id/ivVoteNow"
            app:layout_constraintTop_toBottomOf="@+id/ivVoteNow" />

        <ImageView
            android:id="@+id/viewCandidates"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_design"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivVoteNow"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/candidate" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candidates"
            android:textColor="@color/colorPrimaryWave"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/viewCandidates"
            app:layout_constraintStart_toStartOf="@+id/viewCandidates"
            app:layout_constraintTop_toBottomOf="@+id/viewCandidates" />

        <ImageView
            android:id="@+id/ivUpdateProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_design"
            android:padding="25dp"
            app:layout_constraintEnd_toEndOf="@+id/ivVoteNow"
            app:layout_constraintStart_toStartOf="@+id/ivVoteNow"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/update_profile" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textColor="@color/colorPrimaryWave"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ivUpdateProfile"
            app:layout_constraintStart_toStartOf="@+id/ivUpdateProfile"
            app:layout_constraintTop_toBottomOf="@+id/ivUpdateProfile" />

        <ImageView
            android:id="@+id/ivResult"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_design"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="@+id/viewCandidates"
            app:layout_constraintStart_toStartOf="@+id/viewCandidates"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:srcCompat="@drawable/result" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results"
            android:textColor="@color/colorPrimaryWave"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ivResult"
            app:layout_constraintStart_toStartOf="@+id/ivResult"
            app:layout_constraintTop_toBottomOf="@+id/ivResult" />

        <ImageView
            android:id="@+id/ivLogOut"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/custom_design"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="@+id/ivResult"
            app:layout_constraintStart_toStartOf="@+id/ivResult"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@drawable/logout" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="@color/colorPrimaryWave"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ivLogOut"
            app:layout_constraintStart_toStartOf="@+id/ivLogOut"
            app:layout_constraintTop_toBottomOf="@+id/ivLogOut" />

        <ImageView
            android:id="@+id/ivAboutUs"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_design"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="@+id/ivUpdateProfile"
            app:layout_constraintStart_toStartOf="@+id/ivUpdateProfile"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:srcCompat="@drawable/about_us" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textColor="@color/colorPrimaryWave"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ivAboutUs"
            app:layout_constraintStart_toStartOf="@+id/ivAboutUs"
            app:layout_constraintTop_toBottomOf="@+id/ivAboutUs" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_wave3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvRegister"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>